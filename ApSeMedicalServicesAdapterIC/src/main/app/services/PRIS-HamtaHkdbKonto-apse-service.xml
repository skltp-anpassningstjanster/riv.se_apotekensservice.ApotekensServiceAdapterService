<?xml version="1.0" encoding="utf-8"?>
<mule 
	xmlns="http://www.mulesoft.org/schema/mule/core"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns:spring="http://www.springframework.org/schema/beans"
	xmlns:doc="http://www.mulesoft.org/schema/mule/documentation"
	xmlns:cxf="http://www.mulesoft.org/schema/mule/cxf"
	xmlns:http="http://www.mulesoft.org/schema/mule/http"
	xmlns:https="http://www.mulesoft.org/schema/mule/https"
	xsi:schemaLocation="
		http://www.springframework.org/schema/beans   http://www.springframework.org/schema/beans/spring-beans-current.xsd
		http://www.mulesoft.org/schema/mule/core      http://www.mulesoft.org/schema/mule/core/current/mule.xsd
		http://www.mulesoft.org/schema/mule/cxf       http://www.mulesoft.org/schema/mule/cxf/current/mule-cxf.xsd
		http://www.mulesoft.org/schema/mule/http      http://www.mulesoft.org/schema/mule/http/current/mule-http.xsd
		http://www.mulesoft.org/schema/mule/https     http://www.mulesoft.org/schema/mule/https/current/mule-https.xsd
	">
	
	<!-- Name of this file is mandatory and may not be changed. -->

	
	<flow name="Bridged-ApotekenService-HamtaHkdbKonto">

		<composite-source>
		<http:inbound-endpoint address="${inbound.endpoint.http.apotekensservice.pris.HamtaHkdbKonto}"
			connector-ref="soitoolkit-http-connector" 
			exchange-pattern="request-response"
			responseTransformer-refs="logRespOut"
			transformer-refs="logReqIn">
		</http:inbound-endpoint>
		<https:inbound-endpoint address="${inbound.endpoint.https.apotekensservice.pris.HamtaHkdbKonto}"
			connector-ref="soitoolkit-https-connector" 
			exchange-pattern="request-response"
			responseTransformer-refs="logRespOut"
			transformer-refs="logReqIn">
		</https:inbound-endpoint>

		</composite-source>
		
		<cxf:proxy-service
			namespace="urn:riv:inera:se.apotekensservice:pris:HamtaHkdbKonto:1:rivtabp20"
			payload="envelope" 
			service="HamtaHkdbKontoResponderService"
			wsdlLocation="classpath:/TD_APSE_PRIS_1_0_0_SNAPSHOT/interactions/HamtaHkdbKontoInteraction/HamtaHkdbKontoInteraction_1.0_rivtabp20.wsdl" />
		
		<transformer ref="XmlToXSR" />
		<transformer ref="ArgosHeaderToSamlTicket" />
		
		<https:outbound-endpoint connector-ref="soitoolkit-https-connector"
			address="${outbound.endpoint.apotekensservice.pris.HamtaHkdbKonto}"
			exchange-pattern="request-response" 
			responseTimeout="${SERVICE_TIMEOUT_MS}"
			transformer-refs="addContentTypeXmlUtf8 logReqOut" 
			responseTransformer-refs="logRespIn IgnoreExceptionPayloads">
		</https:outbound-endpoint>
		
		<custom-exception-strategy class="org.soitoolkit.commons.mule.error.ServiceExceptionStrategy"/>
		
	</flow>

	<flow name="Bridged-ApotekenService-HamtaHkdbKonto-env2">

		<composite-source>
		<http:inbound-endpoint address="${inbound.endpoint.http.env2.apotekensservice.pris.HamtaHkdbKonto}"
			connector-ref="soitoolkit-http-connector" 
			exchange-pattern="request-response"
			responseTransformer-refs="logRespOut"
			transformer-refs="logReqIn">
		</http:inbound-endpoint>
		<https:inbound-endpoint address="${inbound.endpoint.https.env2.apotekensservice.pris.HamtaHkdbKonto}"
			connector-ref="soitoolkit-https-connector" 
			exchange-pattern="request-response"
			responseTransformer-refs="logRespOut"
			transformer-refs="logReqIn">
		</https:inbound-endpoint>
		</composite-source>

		<cxf:proxy-service
			namespace="urn:riv:inera:se.apotekensservice:pris:HamtaHkdbKonto:1:rivtabp20"
			payload="envelope" 
			service="HamtaHkdbKontoResponderService"
			wsdlLocation="classpath:/TD_APSE_PRIS_1_0_0_SNAPSHOT/interactions/HamtaHkdbKontoInteraction/HamtaHkdbKontoInteraction_1.0_rivtabp20.wsdl" />
		
		<transformer ref="XmlToXSR" />
		<transformer ref="ArgosHeaderToSamlTicket" />
		
		<https:outbound-endpoint connector-ref="soitoolkit-https-connector"
			address="${outbound.endpoint.env2.apotekensservice.pris.HamtaHkdbKonto}"
			exchange-pattern="request-response" 
			responseTimeout="${SERVICE_TIMEOUT_MS}"
			transformer-refs="addContentTypeXmlUtf8 logReqOut" 
			responseTransformer-refs="logRespIn IgnoreExceptionPayloads">
		</https:outbound-endpoint>
		
		<custom-exception-strategy class="org.soitoolkit.commons.mule.error.ServiceExceptionStrategy"/>
		
	</flow>

</mule>
